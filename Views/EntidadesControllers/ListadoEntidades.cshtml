@model IEnumerable<Testing2.Models.Entidades>

@{
    ViewData["Title"] = "Listado De Entidades";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Listado de Entidades</h3>

<p>
    <a asp-action="NuevaEntidad">Crear Una Nueva Entidad</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DNI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DNI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td> 
                @Html.ActionLink("Editar", "Editar", new { dni = item.DNI, nombre = item.Nombre, apellido = item.Apellido, direccion = item.Direccion }) |
                @Html.ActionLink("Eliminar", "Eliminar", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
